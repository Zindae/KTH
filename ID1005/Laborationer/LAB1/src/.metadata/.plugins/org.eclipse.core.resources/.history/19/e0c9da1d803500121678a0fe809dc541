/*LABB 2. PROGRAM 2: LAB1_Stringbuilder.java.
 *  Innefattar:
 *
 *   - Skapa och använd objekt av olika standardklasser (String, Scanner, Integer, Double)
 *   -Objekt och vektorer med objekt som parametrar och returtyper i olika metoder
 * 
 * 
 * I detta program demonstreras olika strängar som ändras med stringbuilder */

import static java.lang.System.out;

public class LAB2_StringBuilder 
{
	
	public static void main(String[] args)
	{
		java.util.Scanner read = new java.util.Scanner (System.in);
		
		System.out.println("PROGRAM 2: StringBuilder\n\nSkriv mening ett: ");
		
		String a  = read.nextLine();
						
		StringBuilder s1 = new StringBuilder(a);
		
		out.println("\nMening ett: " + s1 +"\nLängden av mening ett: " + s1.length());
		out.println("Kapacitet av mening ett: " + s1.capacity());
	    out.println("\nSkriv mening två: ");
		
		String b = read.nextLine();
		StringBuilder s2 = new StringBuilder(b);
		
		out.println("\nMening två: " + s2 + "\nLängden av mening två: " + s2.length());
		out.println("Kapacitet av mening två: " + s2.capacity());
				
		s1.append(s2);
		//utökar s1 med s2 
		
		out.println("\nMeningarna sammansatta: \n" + s1);
				
		out.println("\nSkriv mening tre: ");
		
		String c = read.nextLine();
		StringBuilder s3 = new StringBuilder(c);
		
		out.println("\nMening tre: " + s3 + "\nLängden av mening tre: " + s3.length());
		out.println("Kapacitet av mening tre: " + s3.capacity());
				
		s1.append(s3);
		
		out.println("\nMeningarna sammansatta: \n" + s1);
		
		s1.reverse(s1); 
		
		out.println(s1);
		
		
		
		
	}

}
